public class StringMethodsExample {
    public static void main(String[] args) {
        // Creating a string using the String constructor
        String str = new String("Hello, World!");

        // 1. length() - Get the length of the string
        System.out.println("Length of string: " + str.length());

        // 2. charAt() - Get the character at a specific index
        System.out.println("Character at index 7: " + str.charAt(7));

        // 3. substring() - Extract a substring
        System.out.println("Substring from index 7: " + str.substring(7));

        // 4. toUpperCase() - Convert string to uppercase
        System.out.println("Uppercase: " + str.toUpperCase());

        // 5. toLowerCase() - Convert string to lowercase
        System.out.println("Lowercase: " + str.toLowerCase());

        // 6. replace() - Replace characters
        System.out.println("Replacing 'World' with 'Java': " + str.replace("World", "Java"));

        // 7. contains() - Check if string contains a specific sequence
        System.out.println("Does the string contain 'Hello'? " + str.contains("Hello"));

        // 8. indexOf() - Find the index of a specific character or substring
        System.out.println("Index of ',' in string: " + str.indexOf(","));
    }
}
